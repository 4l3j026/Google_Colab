        "# Desarrolle aquí su código\n",
        "# Declaracion de variables\n",
        "import random\n",
        "\n",
        "s=1\n",
        "total_ingreso=0\n",
        "estado = 0\n",
        "\n",
        "#Inicio del ciclo\n",
        "while(True):\n",
        "\n",
        "  #Mensaje inicial de usuario\n",
        "  print(\"\\n\\n¡Bienvenido al parqueadero de Plaza Central!\")\n",
        "\n",
        "  print(\"\"\"\n",
        "\n",
        "  Seleccione su vehículo:\n",
        "\n",
        "    * 1. Automóvil\n",
        "    * 2. Motocicleta\n",
        "    * 3. Bicicleta\n",
        "\n",
        "  \"\"\")\n",
        "\n",
        "  #Guardar variable del vehículo\n",
        "  tipo_vehiculo = input(\"Ingrese su opción: \")\n",
        "\n",
        "#Condicionales\n",
        "  if tipo_vehiculo == '1': #Condicional vehículo\n",
        "    print(\"\\n El vechículo seleccinado es un automóvil. \")\n",
        "    estado = 1\n",
        "\n",
        "    while estado == 1:\n",
        "      placa = input(\"Ingrese la placa del automóvil: \")\n",
        "\n",
        "      letra = placa[:3]\n",
        "\n",
        "      if len(placa) == 6:\n",
        "\n",
        "        print(\"Placa completa\")\n",
        "        tiempo_parqueadero = random.randrange(1, 180, 1)\n",
        "        print(f\"Su tiempo en el parqueadero es de {tiempo_parqueadero} minutos\")\n",
        "\n",
        "        total = tiempo_parqueadero * 70\n",
        "\n",
        "        estado = 2\n",
        "      else:\n",
        "\n",
        "        print(\"Placa incorrecta, vuelva a ingresarla.\")\n",
        "\n",
        "  elif tipo_vehiculo == '2': #Condicional motocicleta\n",
        "\n",
        "    print(\"\\n El vechículo seleccinado es una motocicleta. \")\n",
        "    estado = 1\n",
        "\n",
        "    while estado == 1:\n",
        "      placa = input(\"Ingrese la placa de la motocicleta: \")\n",
        "\n",
        "      if len(placa) == 6:\n",
        "\n",
        "        print(\"Placa completa\")\n",
        "        tiempo_parqueadero = random.randrange(1, 180, 1)\n",
        "        print(f\"Su tiempo en el parqueadero es de {tiempo_parqueadero} minutos\")\n",
        "\n",
        "        total = tiempo_parqueadero * 50\n",
        "\n",
        "        estado = 2\n",
        "      else:\n",
        "\n",
        "        print(\"Placa incorrecta, vuelva a ingresarla.\")\n",
        "\n",
        "  elif tipo_vehiculo == '3':\n",
        "    print(\"\\n El vechículo seleccinado es una bicicleta \")\n",
        "    placa = ('Bicicleta')\n",
        "    tiempo_parqueadero = random.randrange(1, 180, 1)\n",
        "    print(f\"Su tiempo en el parqueadero es de {tiempo_parqueadero} minutos\")\n",
        "\n",
        "    total = tiempo_parqueadero * 10\n",
        "\n",
        "    estado = 2\n",
        "\n",
        "  else:\n",
        "    print(f\"\\n\\n Error {tipo_vehiculo} no es un elemento a seleccionar. Vuelva a intentarlo \\n\\n\")\n",
        "\n",
        "\n",
        "  #Crear número aleatorio\n",
        "\n",
        "\n",
        "  if estado == 2:\n",
        "\n",
        "\n",
        "\n",
        "    print(f\"El total de su tiquete es {total}\")\n",
        "\n",
        "    while(True):\n",
        "      dinero = int(input(\"Ingrese su dinero: \"))\n",
        "      total_ingreso += dinero;\n",
        "      if total_ingreso < total:\n",
        "\n",
        "        print(f\"Incompleto, ingresó: {total_ingreso} \\n Recuerde que el valor a pagar es: {total}\")\n",
        "\n",
        "      elif total_ingreso == total:\n",
        "        print(\"Su tiquete ha sido pagado\")\n",
        "        estado =3\n",
        "        break\n",
        "\n",
        "      elif total_ingreso > total:\n",
        "\n",
        "        for i in range(0,50, 1):\n",
        "\n",
        "          print(\"-\")\n",
        "\n",
        "        print(\"Generando pago\")\n",
        "\n",
        "        vueltas = total_ingreso - total\n",
        "        print(f\"Su valor devuelto es: {vueltas} pesos m/c\")\n",
        "        estado =3\n",
        "        break\n",
        "\n",
        "\n",
        "\n",
        "  if estado ==3:\n",
        "\n",
        "    print(\"Transacción Finalizada.\")\n",
        "    while(True):\n",
        "      recibo = input(\"\\n\\n        ¿Desea imprimir el recibo?    (Si)(No)    \")\n",
        "\n",
        "      recibo = recibo.lower()\n",
        "      print(recibo)\n",
        "\n",
        "      if recibo == \"si\":\n",
        "\n",
        "        print(f\"\"\"\n",
        "\n",
        "              ##########################\n",
        "\n",
        "              Parquedaero Plaza Central\n",
        "              El vehículo de placas: {placa}\n",
        "              uso el parqueadero durante {tiempo_parqueadero} minutos\n",
        "              Su pago es de: {total} pesos m/c\n",
        "\n",
        "              ##########################\n",
        "\n",
        "        \"\"\")\n",
        "        estado = 0\n",
        "        break\n",
        "      elif recibo == \"no\":\n",
        "\n",
        "        print(\"¡Vuelva pronto!\")\n",
        "        estado = 0\n",
        "        break\n",
        "\n",
        "      else:\n",
        "        print(\"Vuelva a intentarlo\")\n",
        "        estado = 0\n",
        "\n",
        "\n",
